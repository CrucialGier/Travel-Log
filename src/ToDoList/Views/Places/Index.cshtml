@model IEnumerable<ToDoList.Models.Place>

@{
    ViewData["Title"] = "Place";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>To Do List</h2>
<hr />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var listPlace in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelPlace => listPlace.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = listPlace.PlaceId }) |
                @Html.ActionLink("Details", "Details", new { id = listPlace.PlaceId }) |
                @Html.ActionLink("Delete", "Delete", new { id = listPlace.PlaceId })
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Create New", "Create")
</p>